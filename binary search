#include<iostream>
#include<vector>
using namespace std;
int main (){
int n=0;
int mid=0;
int index=-1;
cout<<"the size of an array"<<endl;
cin>>n;
vector <int> arr(n);
cout<<"enter the  sorted elements of array"<<endl;
for(int i = 0;i < n;i++)
{
cin>>arr[i];
}
cout<<" binary search :"<<endl;
cout<<"the search element are  :"<<endl;
int search;
cin>>search;
int low=0,high=n-1;
while(low<=high)
{
   mid=(low+high)/2;
  if(search==arr[mid])
{
cout<<"the element is found : "<<mid<<endl;
index=arr[mid];
break;
}
else if(arr[mid]<search)
{
low=mid+1;
}
else
{
high=mid-1;
}
}
if(index==-1)
{cout<<"the element is  not found";
}
else{
cout<<"the element is founded array";

}
return 0;
}
